/* pages/mykt_more_notice/mykt_more_notice.wxss */
page{
    background: #D6D6D6;
}
.backg{
    position: absolute;
    left: 40rpx;
    top: 2.5%;
    width: 670rpx;
    height: 95%;
    border-radius: 27rpx;
    background: #9FC1D3;
    
}
.list{
    position: absolute;
    left: 5%;
    top: 10%;
    width: 90%;
    height: 87.5%;
    border-radius: 37rpx;
    overflow: hidden;

}
.notice{
    width: 100%;
    height: 20%;
    overflow: hidden;
    border-radius: 37rpx;
}
.notice_box{
    position: absolute;
    width: 100%;
    height: 15%;
    border-radius: 63rpx;
    background: #D8D8D8;
}
.notice_box:active{
    background: #c1c0c0;
}
.notice_txt{
    position: absolute;
    top: 15%;
    left: 10%;
    width: 80%;
    height: 70%;
    font-size: 35rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.add_notice{

    position: absolute;
    left: 600rpx;
    top: 85%;
    width: 120rpx;
    height: 120rpx;
    background: #0686FD;
    border-radius: 63rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 110rpx;
    color: #fff;
}
.title{
    text-align: center;
    position: absolute;
    top: 3%;
    width: 100%;
    font-size: 50rpx;
}