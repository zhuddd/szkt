.bj{
    /*背景*/
    position: absolute;
    width: 100%;
    height: 100%;
    background: #D6D6D6;
}
.box{
    width: 100%;
    height: 100%;
    position: absolute;
}
.item{
    width: 100%;
    height: 15%;
    position: relative;
}
.msg{
    position: absolute;
    left: 5%;
    top: 5%;
    width: 90%;
    height: 80%;
    box-sizing: border-box;
    font-size: 36rpx;
}
.time{
    /*时间*/
    position: absolute;
    top:60%;
    right: 5%;
    width: 330rpx;
    text-align: right;
    box-sizing: border-box;
}
.line{
    /*分割线*/
    position: absolute;
    left: 10%;
    width: 80%;
    height: 0rpx;
    border: 1rpx solid #7f7f7f;
    top: 95%;
}

